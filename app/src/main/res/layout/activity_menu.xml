<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/activity_menu_fingerprint_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_menu_fingerprint_example"/>

        <Button
            android:id="@+id/activity_menu_fingerprint_secure_example1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_menu_fingerprint_secure_example1"/>
    </LinearLayout>

</RelativeLayout>